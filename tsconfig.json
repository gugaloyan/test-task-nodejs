{
  "compilerOptions": {
    "target": "ES2020",                          // Modern JavaScript features
    "module": "CommonJS",                       // Node.js uses CommonJS
    "strict": true,                             // Enable strict type-checking
    "esModuleInterop": true,                    // Compatibility with CommonJS and ES modules
    "forceConsistentCasingInFileNames": true,   // Enforce consistent file name casing
    "skipLibCheck": true,                       // Skip type checking of declaration files
    "outDir": "./dist",                         // Output directory for compiled files
    "rootDir": "./src"                          // Source code directory
  },
  "include": ["src"],                           // Include all files in the src folder
  "exclude": ["node_modules"]                   // Exclude the node_modules folder
}